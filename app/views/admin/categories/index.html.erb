<section>
  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>

  <div class="well">
  <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <br />

  <% if notice %>
    <%= notice %>
  <% end %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Plant Category</th>
        <th scope="col">Type Count</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.products.count %></td>
      </tr>
      <%end %>
    </tbody>
  </table>

</section>